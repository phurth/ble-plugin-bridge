<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OneControl BLE Bridge"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Status: Not connected"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <Button
            android:id="@+id/startServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Start BLE Bridge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusText" />

        <Button
            android:id="@+id/stopServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Stop BLE Bridge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startServiceButton" />

        <LinearLayout
            android:id="@+id/statusChecklist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/stopServiceButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/checkService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service: ⏳"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/checkPaired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paired: ⏳"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/checkBle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BLE Connected: ⏳"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/checkData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Healthy: ⏳"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/checkMqtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MQTT Connected: ⏳"
            android:textSize="16sp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/statusChecklist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reliability settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBatteryOpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable battery optimization"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/helpBatteryOpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keeps Android from throttling the bridge. Opens system settings."
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchStartOnBoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start on boot"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/helpStartOnBoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-launches the bridge after device reboots."
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchWatchdog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BLE/MQTT watchdog"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/helpWatchdog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periodically checks BLE and MQTT; restarts them if they drop."
            android:textSize="14sp"
            android:paddingBottom="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/configContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/settingsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/configTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection settings ▼"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/configFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gateway MAC"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputGatewayMac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 24:DC:C3:ED:1E:0A"
                android:inputType="textVisiblePassword"
                android:paddingVertical="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gateway PIN"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputGatewayPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Printed on the OneControl sticker"
                android:inputType="number"
                android:paddingVertical="6dp" />

            <TextView
                android:id="@+id/helpGatewayPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use the numeric PIN on the OneControl unit sticker."
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT host"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputMqttHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MQTT host (IP or hostname)"
                android:inputType="textUri"
                android:paddingVertical="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT port"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputMqttPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MQTT port (default 1883)"
                android:inputType="number"
                android:paddingVertical="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT topic prefix"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputMqttTopicPrefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MQTT topic prefix (default onecontrol/ble)"
                android:inputType="textVisiblePassword"
                android:paddingVertical="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT username"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputMqttUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MQTT username"
                android:inputType="textVisiblePassword"
                android:paddingVertical="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MQTT password"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/inputMqttPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MQTT password"
                android:inputType="textPassword"
                android:paddingVertical="6dp" />

            <Button
                android:id="@+id/saveConfigButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Save &amp; Apply" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diagnosticsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/configContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/diagnosticsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnostics"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/buttonExportDebugLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export debug log" />

        <Button
            android:id="@+id/buttonToggleTrace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Start BLE trace" />

        <TextView
            android:id="@+id/textTraceStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Trace: inactive"
            android:textSize="14sp" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

